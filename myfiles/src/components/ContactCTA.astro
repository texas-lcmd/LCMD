---
import CallToAction from './CallToAction.astro';
import Icon from './Icon.astro';
---

<aside>
	<section>
		<div class="content">
			<div class="subscription-box">
				<h3>Subscribe to our newsletter • Don’t miss out!</h3>
				<p>Email*</p>
				<form id="subscription-form" action="/send-email" method="post">
					<input type="email" name="email" placeholder="Your email address" required>
					<button type="submit">Subscribe</button>
				</form>
			</div>
		</div>
	</section>
</aside>

<style>
	aside {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 3rem;
		border-top: 1px solid var(--gray-800);
		border-bottom: 1px solid var(--gray-800);
		padding: 5rem 1.5rem;
		background-color: var(--gray-999_40);
		box-shadow: var(--shadow-sm);
	}
	


	h2 {
		font-size: var(--text-xl);
		text-align: center;
		max-width: 15ch;
	}

	@media (min-width: 50em) {
		aside {
			padding: 5rem;
			flex-direction: row;
			flex-wrap: wrap;
			justify-content: space-between;
		}

		h2 {
			font-size: var(--text-3xl);
			text-align: left;
		}
	}
	.subscription-box {
    border: 1px solid var(--gray-800);
    border-radius: 0.75rem;
    padding: 1.5rem;
    background-color: var(--gray-999_40);
    box-shadow: var(--shadow-sm);
    text-align: left; /* Centers the text within the box */
    max-width: 500px; /* Adjust the width as needed */
    margin: 1rem auto; /* Centers the box horizontally and adds vertical spacing */
}

.subscription-box h3 {
    font-size: var(--text-lg); /* Adjust font size as needed */
    margin-bottom: 1rem;
}

.subscription-box p {
    font-size: var(--text-sm); /* Adjust font size as needed */
    color: var(--gray-400);
    margin-bottom: 1.5rem;
}

.subscription-box form {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.subscription-box input[type="email"] {
    padding: 0.75rem;
    border: 1px solid var(--gray-800);
    border-radius: 0.375rem;
    font-size: var(--text-base); /* Adjust font size as needed */
}

.subscription-box button {
    padding: 0.75rem;
    border: none;
    border-radius: 0.375rem;
    background-color: var(--accent-regular); /* Adjust color as needed */
    color: #fff;
    font-size: var(--text-base); /* Adjust font size as needed */
    cursor: pointer;
}

.subscription-box button:hover {
    background-color: var(--accent-dark); /* Adjust hover color as needed */
}

</style>
